<Application
    x:Class="Clean_Reader.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Clean_Reader">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light" Source="ms-appx:///Theme/Light.xaml"/>
                <ResourceDictionary x:Key="Dark" Source="ms-appx:///Theme/Dark.xaml"/>
            </ResourceDictionary.ThemeDictionaries>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="ms-appx:///Template/Buttons.xaml"/>
                <ResourceDictionary Source="ms-appx:///Template/Text.xaml"/>
                <ResourceDictionary Source="ms-appx:///Template/Single.xaml"/>
                <ResourceDictionary Source="ms-appx:///Template/View.xaml"/>
                <ResourceDictionary Source="ms-appx:///Template/Converters.xaml"/>
                <ResourceDictionary Source="ms-appx:///Template/Input.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
