<ui:RichasyPage
    xmlns:ui="using:Richasy.Controls.UWP.Models.UI"
    x:Class="Clean_Reader.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Clean_Reader"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:layout="using:Clean_Reader.Controls.Layout"
    mc:Ignorable="d"
    Loaded="RichasyPage_Loaded"
    SizeChanged="RichasyPage_SizeChanged"
    Background="{ThemeResource PageBackground}">

    <Grid>
        <SplitView OpenPaneLength="340" DisplayMode="CompactInline"
                   IsPaneOpen="True">
            <SplitView.Pane>
                <Grid>
                    <layout:SidePanel/>
                </Grid>
            </SplitView.Pane>

            <SplitView.Content>
                <Grid Background="{ThemeResource PageBackground}">
                    <Frame x:Name="MainFrame"/>
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</ui:RichasyPage>
