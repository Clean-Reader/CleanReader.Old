    <Style TargetType="interaction:ExtraButton" x:Key="TransparentExtraButtonStyle">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="PointerOverBackground" Value="Transparent" />
        <Setter Property="PointerOverForeground" Value="Transparent" />
        <Setter Property="PressBackground" Value="Transparent" />
        <Setter Property="PressForeground" Value="Transparent" />
