<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Clean_Reader.Theme">
    <AcrylicBrush x:Key="SideBackground" BackgroundSource="HostBackdrop" TintColor="#252a40" FallbackColor="#282828" TintOpacity="0.7"/>
    <AcrylicBrush x:Key="PaneBackground" BackgroundSource="Backdrop" TintColor="#252a40" FallbackColor="#282828" TintOpacity="0.9"/>
    <AcrylicBrush x:Key="PopupBackground" BackgroundSource="Backdrop" TintColor="#252a40" FallbackColor="#1C1C1C" TintOpacity="0.8"/>
    <SolidColorBrush x:Key="MaskBackground" Color="#282828" Opacity="0.6"/>
    <AcrylicBrush x:Key="PageBackground" BackgroundSource="HostBackdrop" TintColor="#252a40" FallbackColor="#282828" TintOpacity="0.7"/>
    <SolidColorBrush x:Key="PageOverBackground" Color="#0D0D0D"/>
    <SolidColorBrush x:Key="CardBackground" Color="#3a3f53"/>
    <SolidColorBrush x:Key="CardBackgroundOver" Color="#2E3242"/>
    <SolidColorBrush x:Key="PointerOverMaskBackground" Color="White" Opacity="0.05"/>
    <SolidColorBrush x:Key="TransparentBackground" Color="Black" Opacity="0.01"/>

    <SolidColorBrush x:Key="ImportantTextColor" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="NormalTextColor" Color="#E2E2E5"/>
    <SolidColorBrush x:Key="TipTextColor" Color="#828492"/>
    <SolidColorBrush x:Key="MaskTextColor" Color="#3D4469"/>

    <SolidColorBrush x:Key="LineColor" Color="#3a3e55"/>
    <SolidColorBrush x:Key="LineColorOver" Color="#424761"/>
    <SolidColorBrush x:Key="ProgressColor" Color="#252a40" Opacity="0.45"/>

    <Color x:Key="ShadowColor">#111111</Color>

    <SolidColorBrush x:Key="PrimaryColorOpacity" Color="#b563d2" Opacity="0.1"/>
    <LinearGradientBrush x:Key="PrimaryColor" StartPoint="0,0" EndPoint="1,1">
        <GradientStopCollection>
            <GradientStop Color="#b563d2" Offset="0"/>
            <GradientStop Color="#6b3fbe" Offset="1"/>
        </GradientStopCollection>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="PrimaryColorOver" Color="#7E4AE0"/>
    <SolidColorBrush x:Key="SecondaryColorOpacity" Color="#F7BA71" Opacity="0.2"/>
    <LinearGradientBrush x:Key="SecondaryColor" StartPoint="0,0" EndPoint="1,1">
        <GradientStopCollection>
            <GradientStop Color="#F7BA71" Offset="0"/>
            <GradientStop Color="#EE7063" Offset="1"/>
        </GradientStopCollection>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="SecondaryColorOver" Color="#EE7063"/>

    <SolidColorBrush x:Key="SuccessColorOpacity" Color="#99B42D" Opacity="0.2"/>
    <SolidColorBrush x:Key="SuccessColor" Color="#ADC744"/>
    <SolidColorBrush x:Key="SuccessColorOver" Color="#A1BD2F"/>
    <SolidColorBrush x:Key="ErrorColor" Color="#F63340"/>
    <SolidColorBrush x:Key="ErrorColorOpacity" Color="#F63340" Opacity="0.2"/>
    <SolidColorBrush x:Key="ErrorColorOver" Color="#E32528"/>
</ResourceDictionary>
